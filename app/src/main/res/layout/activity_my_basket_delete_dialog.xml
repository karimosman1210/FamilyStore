<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#3E80B4"
    tools:context="com.example.osman.grandresturant.Dialogs.MyBasket_delete_dialog">

    <TextView
        android:id="@+id/txt_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="هل تريد إلغاء هذا الطلب ؟"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="15dp"
        android:background="#3E80B4"
        android:orientation="horizontal" >




        <Button
            android:layout_width="120dp"
            android:id="@+id/My_Basket_delete_dialog_btn_no"
            android:layout_height="40dp"
            android:background="@android:color/white"
            android:clickable="true"
            android:text="لا"
            android:textColor="#5DBCD2"
            android:textStyle="bold" />




        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:id="@+id/My_Basket_delete_dialog_btn_yes"
            android:layout_marginLeft="5dp"
            android:background="@android:color/white"
            android:clickable="true"
            android:text="نعم"
            android:textColor="#5DBCD2"
            android:textStyle="bold" />



    </LinearLayout>

</LinearLayout>
