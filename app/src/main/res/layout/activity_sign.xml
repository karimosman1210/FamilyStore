<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.example.osman.grandresturant.Registration.Sign">



    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_layout"
        android:theme="@style/AppTheme.AppBarOverlay">



        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/Custom_Humborer">

            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingRight="10dp"
                android:layout_height="match_parent">

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>



    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_layout"
        android:layout_above="@+id/btns_layout"
        android:paddingTop="50dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                </LinearLayout>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/sign_up_icon"
                    android:id="@+id/myImgeSign"
                    android:scaleType="centerInside"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/input"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="right"
                            android:orientation="horizontal"
                            android:padding="20dp"
                            android:weightSum="2">


                            <RadioButton
                                android:id="@+id/radio_user"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_weight="1"
                                android:layoutDirection="rtl"
                                android:onClick="onRadioButtonClicked"
                                android:text="مستخدم"
                                android:textAlignment="textStart" />


                            <RadioButton
                                android:id="@+id/radio_company"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_weight="1"
                                android:layoutDirection="rtl"
                                android:onClick="onRadioButtonClicked"
                                android:text="تاجر"
                                android:textAlignment="textStart" />
                        </RadioGroup>


                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input"
                        android:gravity="right"
                        android:padding="7dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="#A6B9CA"
                            android:id="@+id/sign_location_textview"
                            android:text="المدينة"/>

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_map_marker_grey600_18dp"/>


                    </LinearLayout>
                </RelativeLayout>


                <EditText
                    android:id="@+id/nameEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/input"
                    android:drawableEnd="@drawable/name"
                    android:hint="الأسم"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:paddingRight="7dp"
                    android:gravity="right"
                    android:paddingLeft="7dp"
                    android:textColor="@color/home"
                    android:textColorHint="#A6B9CA"
                    android:textSize="18sp" />



                <EditText
                    android:id="@+id/phone_Et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:gravity="right"
                    android:background="@drawable/input"
                    android:drawableEnd="@drawable/ic_phone_grey600_24dp"
                    android:hint="رقم الموبايل"
                    android:padding="7dp"
                    android:textColor="@color/home"
                    android:textColorHint="#A6B9CA"
                    android:textSize="18sp" />


                <EditText
                    android:id="@+id/emailEtSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/input"
                    android:inputType="textEmailAddress"
                    android:gravity="right"
                    android:drawableEnd="@drawable/ic_email"
                    android:hint="البريد الإلكترونى"
                    android:padding="7dp"
                    android:textColor="@color/home"
                    android:textColorHint="#A6B9CA"
                    android:textSize="18sp"


                    />


                <EditText
                    android:id="@+id/passwordEtSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/input"
                    android:drawableEnd="@drawable/ic_lock_outline"
                    android:hint="كلمة السر"
                    android:inputType="textPassword"
                    android:gravity="right"
                    android:padding="7dp"
                    android:textColor="@color/home"
                    android:textColorHint="#A6B9CA"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/surepassSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/input"
                    android:drawableEnd="@drawable/ic_lock_outline"
                    android:gravity="right"
                    android:hint="تأكيد كلمة السر"
                    android:inputType="textPassword"
                    android:padding="7dp"
                    android:textColor="@color/home"
                    android:textColorHint="#A6B9CA"
                    android:textSize="18sp" />

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/btns_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="5dp">

            <Button
                android:id="@+id/signUpBtnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btninputcancel"
                android:fontFamily="serif"
                android:text="Cancel"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="18dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp">

            <Button
                android:id="@+id/signUpBtnSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btninput"
                android:fontFamily="serif"
                android:text="Sign Up"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
