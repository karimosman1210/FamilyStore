<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e7ffffff"
    android:orientation="vertical"
    tools:context="com.example.osman.grandresturant.Login"
    android:weightSum="100">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="100"
    >
    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/ll"
        android:scaleType="centerInside"
        android:layout_marginTop="22dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enjoy Shopping"
        android:textSize="22sp"
        android:fontFamily="casual"
        android:textColor="#a5933508"
        android:layout_marginTop="244dp"
        android:layout_gravity="right"
        android:layout_marginEnd="16dp"

        />
</FrameLayout>


<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="100"
    android:orientation="horizontal"
    android:layout_gravity="bottom"
    android:layout_marginTop="90dp"
    android:layout_marginBottom="18dp"

    >

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        app:cardCornerRadius="16dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"
        app:cardElevation="4dp"
        >
    <Button
        android:id="@+id/visitorBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/btninput"
        android:text="  Visitor"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#cd212221"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:drawableStart="@drawable/proff"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        app:cardCornerRadius="16dp"
        android:layout_marginRight="10dp"
        app:cardElevation="4dp"
        >
        <Button
            android:id="@+id/sallerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/btninput"
            android:text="  Saller"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#cd212221"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:drawableStart="@drawable/add"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            />
    </android.support.v7.widget.CardView>


 </LinearLayout>





</LinearLayout>
