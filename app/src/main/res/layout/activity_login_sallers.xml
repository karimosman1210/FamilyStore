<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registration_background"
    tools:context="com.example.osman.grandresturant.Registration.LoginSallers">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#C3000000"
        android:padding="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.example.osman.grandresturant.Registration.Login">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/iconapp" />

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="أسر الخير"
                android:textColor="#fff"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/emailEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/input"
                android:drawableEnd="@drawable/ic_email"
                android:gravity="right"
                android:hint=" البريد الإليكترونى"
                android:inputType="textEmailAddress"
                android:padding="7dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="15dp" />


            <EditText
                android:id="@+id/passwordEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/input"
                android:drawableEnd="@drawable/ic_lock_outline"
                android:gravity="right"
                android:hint=" كلمة السر"
                android:inputType="textPassword"
                android:padding="7dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btninput"
                android:fontFamily="serif"
                android:text="تسجيل دخول"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="ليس لديك حساب ؟ إنشاء حساب جديد"
                android:textColor="#A6B9CA"
                android:textSize="18sp"
                android:textStyle="bold"


                />


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>

